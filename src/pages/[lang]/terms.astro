---
// Get language from url and translations from json
interface Params { lang: "en" | "pt" }
const { lang } = Astro.params as Params
export function getStaticPaths () { return [ {params: {lang: 'en'}}, {params: {lang: 'pt'}} ] }
import Languages from "../../assets/translations.json"
const translations = Languages.pages["terms"][lang]

import Layout from '../../layouts/Layout.astro'
---

<Layout title={translations.title} lang={lang}>
    <main class="flex items-center justify-center w-screen h-screen py-2">
        {lang=="pt" ? (
            <iframe src="https://docs.google.com/document/d/e/2PACX-1vT7n-SYPYk3azQxhEygiEmpZf4TK9_m-d0sTauX42GN2O8TFe9v32_lLXsGUyX-vU-UWdBl7kPVauYq/pub?embedded=true" class="w-full max-w-3xl h-[800px] mx-auto border"></iframe>
        ) : (
            <iframe src="https://docs.google.com/document/d/e/2PACX-1vRWlUWAz7nEtZ_ul1fCvaP6eY_HpT_lN41Kyvj1OaTKuvadE9KISyJBJ4Df1AjcZngBycn_PIgj0zef/pub?embedded=true" class="w-full max-w-3xl h-[800px] mx-auto border"></iframe>
        )}
    </main>
</Layout>